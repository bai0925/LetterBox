<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.letterbox4.LoginActivity">


    <!--全局布局开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--登陆布局背景图层-->
        <RelativeLayout
            android:id="@+id/SignInGrpup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/login_bg"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="欢迎登录"
                android:textColor="@color/smssdk_white"
                android:textSize="40dp" />

            <!--主体输入框背景图层-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="175dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_input"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/signInUserName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@mipmap/accout"
                    android:drawablePadding="20dp"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:maxLength="11" />

                <EditText
                    android:id="@+id/signInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@mipmap/passwordlock"
                    android:drawablePadding="20dp"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbUseFaceSignIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:text="刷脸登录" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="9dp">

                        <CheckBox
                            android:id="@+id/cbRememberPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="记住密码" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/signInBtn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_up_down"
                    android:text="登录"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="25dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/signInTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="立即注册"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/signInTv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:onClick="showRePassword"
                        android:text="忘记密码"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:src="@mipmap/bg_login_input" />
        </RelativeLayout>


        <!--注册布局-->
        <RelativeLayout
            android:id="@+id/SignUpGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/signup_bg"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="欢迎注册"
                android:textColor="@color/smssdk_white"
                android:textSize="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="175dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_input"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/signUpUserName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@mipmap/accout"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"/>

                <EditText
                    android:id="@+id/signUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@mipmap/passwordlock"
                    android:hint="设置密码"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/codeForSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="5"
                        android:background="@drawable/shape"
                        android:hint="输入验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingLeft="5dp" />

                    <Button
                        android:id="@+id/btn_getCodeForSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/btn_up_down"
                        android:text="获取验证码" />
                </LinearLayout>

                <Button
                    android:id="@+id/signUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_up_down"
                    android:text="注册"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/signUpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="showSignIn"
                    android:text="返回登录"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="120dp"
                android:src="@mipmap/bg_signup_bg"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <!--注册布局完-->

        <!--重置密码布局开始-->
        <!--暂时不知标题栏是在哪里改的-->
        <LinearLayout
            android:id="@+id/RePasswordGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:text="重置密码"
                android:textSize="64px" />

            <EditText
                android:id="@+id/rePasswordUserName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape"
                android:drawableLeft="@mipmap/accout"
                android:hint="手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/rePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape"
                android:drawableLeft="@mipmap/passwordlock"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingLeft="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/codeForRePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="5"
                    android:background="@drawable/shape"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="5dp" />

                <Button
                    android:id="@+id/btn_getCodeForRePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/btn_up_down"
                    android:text="获取验证码" />
            </LinearLayout>

            <Button
                android:id="@+id/rePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_up_down"
                android:text="重置"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rePasswordTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:onClick="showSignIn2"
                android:text="返回登录"
                android:textSize="20dp" />
        </LinearLayout>
        <!--重置密码布局完-->
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
